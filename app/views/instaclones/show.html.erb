<h1>詳細画面</h1>
  <% if  @instaclone.image.url.nil? %>
  <% else %>
  <p>画像:
  <%= image_tag @instaclone.image.url %>
  </p>
  <% end %>

<p>内容: <%= @instaclone.content %></p>

<% unless @instaclone.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(instaclone_id: @instaclone.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<%= link_to "もどる", :back %>
